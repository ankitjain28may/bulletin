<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.droidbots.bulletin.LoginActivity"
    tools:ignore="MissingPrefix"
    android:orientation="vertical">

    <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/shadow_item_container"
        style="@style/ms9_DefaultShadowStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ms9_affectsDisplayedPosition="true"
        app:ms9_forceUseCompatShadow="true"
        app:ms9_shadowElevation="4dp"
        app:ms9_shadowTranslationZ="2dp"
        app:ms9_useAmbientShadow="true"
        app:ms9_useSpotShadow="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/bulletin_secondary"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"

                />

        </android.support.design.widget.AppBarLayout>
    </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>

    <com.rey.material.widget.EditText
        fontPath="fonts/OpenSans-Semibold.ttf"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/name"
        android:inputType="textEmailAddress"
        style="@style/Material.Widget.EditText.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:et_labelEnable="true"
        android:hint="Name"
        android:textSize="16dp"
        app:et_labelTextSize="14dp"
        app:et_dividerColor="#999"


        android:drawablePadding="10dip"

        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp" />

    <com.rey.material.widget.EditText
        fontPath="fonts/OpenSans-Semibold.ttf"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/email"
        android:inputType="textPassword"
        style="@style/Material.Widget.EditText.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:et_labelEnable="true"
        android:hint="Email Id"
        android:textSize="16dp"
        app:et_labelTextSize="14dp"
        app:et_dividerColor="#999"
        android:layout_marginTop="10dp"

        android:drawablePadding="10dip"

        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp" />

    <com.rey.material.widget.EditText
        fontPath="fonts/OpenSans-Semibold.ttf"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/password"
        android:inputType="textPassword"
        style="@style/Material.Widget.EditText.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:et_labelEnable="true"
        android:hint="Password"
        android:textSize="16dp"
        app:et_labelTextSize="14dp"
        app:et_dividerColor="#999"
        android:layout_marginTop="10dp"

        android:drawablePadding="10dip"

        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">


        <TextView
            fontPath="fonts/OpenSans-Semibold.ttf"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are a"
            android:textSize="16dp" />

        <com.rey.material.widget.Spinner
            android:id="@+id/account_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </com.rey.material.widget.Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:id="@+id/year_layout"
        android:visibility="gone">

        <TextView
            fontPath="fonts/OpenSans-Semibold.ttf"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Year"
             />

        <com.rey.material.widget.Spinner
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="16dp">

        <TextView
            fontPath="fonts/OpenSans-Semibold.ttf"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Department"
             />

        <com.rey.material.widget.Spinner
            android:id="@+id/department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.rey.material.widget.Button
        fontPath="fonts/OpenSans-Semibold.ttf"

        style="@style/Material.Drawable.Ripple.Wave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:textColor="#fff"
        android:background="@color/bulletin_primary"
        android:textSize="16dp" />

</LinearLayout>
